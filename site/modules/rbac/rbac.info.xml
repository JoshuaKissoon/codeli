<?xml version="1.0" encoding="UTF-8"?>
<config>
    
    <information>
        <title>Role Based Access Control</title>
        <description>Module that handles all user access control</description>
    </information>
    
    <dependencies>
        <module>user</module>
    </dependencies>
    
    <permissions>
        <permission>
            <perm>view_roles</perm>
            <title>View Roles</title>
        </permission>
        <permission>
            <perm>add_role</perm>
            <title>Add Role</title>
        </permission>
        <permission>
            <perm>edit_role</perm>
            <title>Edit Role</title>
        </permission>
        <permission>
            <perm>delete_role</perm>
            <title>Delete Role</title>
        </permission>
        <permission>
            <perm>manage_permissions</perm>
            <title>Manage Permissions</title>
        </permission>
    </permissions>
    
    <urls>
        <url>
            <link>admin/rbac/roles</link>
            <permission>view_roles</permission>
        </url>
        <url>
            <link>admin/rbac/roles/add</link>
            <permission>add_role</permission>
        </url>
        <url>
            <link>admin/rbac/permissions</link>
            <permission>manage_permissions</permission>
        </url>
    </urls>
</config>